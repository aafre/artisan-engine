# Artisan Engine Configuration
# Copy this file to .env and customize the values for your setup

# =============================================================================
# ENVIRONMENT & METADATA
# =============================================================================

# Environment name (development, production, testing)
ARTISAN_ENVIRONMENT=development

# Enable debug mode (true/false)
ARTISAN_DEBUG=false

# API version
ARTISAN_VERSION=0.1.0

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Path to your GGUF model file
# Examples:
#   ARTISAN_MODEL_PATH=./models/Meta-Llama-3.1-8B-Instruct.Q4_K_M.gguf
#   ARTISAN_MODEL_PATH=./models/Mistral-7B-Instruct-v0.3-Q4_K_M.gguf
ARTISAN_MODEL_PATH=

# Enable lazy model loading (loads model on first request)
ARTISAN_MODEL_LAZY_LOADING=true

# Context window size (tokens)
ARTISAN_MODEL_N_CTX=2048

# Number of GPU layers to offload (0 = CPU only, -1 = all layers)
ARTISAN_MODEL_N_GPU_LAYERS=0

# Default generation temperature (0.0-1.0)
ARTISAN_MODEL_TEMPERATURE=0.7

# Default maximum tokens to generate
ARTISAN_MODEL_MAX_TOKENS=200

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host address
ARTISAN_SERVER_HOST=127.0.0.1

# Server port
ARTISAN_SERVER_PORT=8000

# Number of worker processes (usually 1 for model inference)
ARTISAN_SERVER_WORKERS=1

# Enable auto-reload for development (true/false)
ARTISAN_SERVER_RELOAD=false

# Logging level (debug, info, warning, error, critical)
ARTISAN_SERVER_LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Enable CORS (true/false)
ARTISAN_CORS_ENABLED=true

# Allowed origins (comma-separated, * for all)
ARTISAN_CORS_ALLOW_ORIGINS=*

# Allowed methods (comma-separated)
ARTISAN_CORS_ALLOW_METHODS=GET,POST

# Allowed headers (comma-separated, * for all)
ARTISAN_CORS_ALLOW_HEADERS=*

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log format string
ARTISAN_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Local development with Llama 3.1 8B
# ARTISAN_MODEL_PATH=./models/Meta-Llama-3.1-8B-Instruct.Q4_K_M.gguf
# ARTISAN_DEBUG=true
# ARTISAN_SERVER_RELOAD=true
# ARTISAN_SERVER_LOG_LEVEL=debug

# Example 2: Production deployment
# ARTISAN_ENVIRONMENT=production
# ARTISAN_MODEL_PATH=/opt/models/production-model.gguf
# ARTISAN_SERVER_HOST=0.0.0.0
# ARTISAN_SERVER_PORT=8080
# ARTISAN_DEBUG=false
# ARTISAN_SERVER_LOG_LEVEL=info
# ARTISAN_CORS_ALLOW_ORIGINS=https://yourdomain.com

# Example 3: GPU acceleration with CUDA
# ARTISAN_MODEL_N_GPU_LAYERS=32
# ARTISAN_MODEL_N_CTX=4096